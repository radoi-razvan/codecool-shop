@page
@model RegisterModel

<h1>@ViewData["Title"]</h1>

<div class="container card justify-content-center" style="margin-top: 20px; margin-bottom: 20px; max-width: 500px;">
    <div class="ps-5 pe-5 justify-content-center" style="margin-top: 20px; margin-bottom: 20px;">
        <div class="row">
            <div>
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h4>Sign Up</h4>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-warning btn-lg btn-block" style="font-weight: bold; font-size: 15px; margin-top: 10px;">Register</button>
                </form>
            </div>
        </div>
     </div>
</div>
        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
